[Unit]
Description=Chloe Shadow Promotion Apply (auto-promotion with safe caps)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/Chloe-alpha
EnvironmentFile=-/root/Chloe-alpha/systemd/chloe.env
ExecStart=/bin/bash -lc 'source venv/bin/activate && python3 -m tools.apply_shadow_promotions'

[Install]
WantedBy=multi-user.target

